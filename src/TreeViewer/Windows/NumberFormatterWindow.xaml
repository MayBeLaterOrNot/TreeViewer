<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewer;assembly=TreeViewer"
        mc:Ignorable="d" Width="800" Height="450"
        x:Class="TreeViewer.NumberFormatterWindow"
        Title="Format number..." FontFamily="resm:TreeViewer.Fonts.?assembly=TreeViewer#Open Sans" FontSize="15"
        Icon="resm:TreeViewer.Assets.WindowIcon.png?assembly=TreeViewer">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <StackPanel>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <TextBlock FontWeight="Bold" FontSize="18" Margin="0,10,0,0" VerticalAlignment="Center">Attribute name:</TextBlock>
          <TextBox Margin="5,10,0,0" Name="AttributeNameContainer" Grid.Column="1">Colour</TextBox>
        </Grid>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <TextBlock FontWeight="Bold" FontSize="18" Margin="0,10,0,0" VerticalAlignment="Center">Attribute type:</TextBlock>
          <ComboBox Margin="5,10,0,0" Name="AttributeTypeContainer" SelectedIndex="0" Grid.Column="1" SelectionChanged="AttributeTypeChanged">
            <ComboBox.Items>
              <ComboBoxItem>String</ComboBoxItem>
              <ComboBoxItem>Number</ComboBoxItem>
            </ComboBox.Items>
          </ComboBox>
        </Grid>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <TextBlock FontWeight="Bold" FontSize="18" Margin="0,10,0,0" VerticalAlignment="Center">Default value:</TextBlock>
          <NumericUpDown Grid.Column="1" Margin="5,10,0,0" Name="DefaultValueNud"></NumericUpDown>
        </Grid>

      </StackPanel>
      <StackPanel Grid.Column="1" Margin="10,0,0,0">
        <TextBlock FontWeight="Bold" Margin="0,10,0,0" FontSize="18">Options:</TextBlock>
        <Grid Name="StringOptions" Margin="24,5,0,0" IsVisible="False">
          <TextBlock FontStyle="Italic">No options available (try parsing)</TextBlock>
        </Grid>
        <Grid Name="NumberOptions" Margin="24,5,0,0" IsVisible="False">
          <TextBlock FontStyle="Italic">No options available (return unchanged)</TextBlock>
        </Grid>
      </StackPanel>
    </Grid>
    <StackPanel Name="AlertContainer" Margin="24,5,0,0" Orientation="Horizontal" IsVisible="False" Grid.Row="1">

    </StackPanel>
    <local:Expander Grid.Row="2" Margin="0,10,0,10" Name="CustomFormatterExpander">
      <local:Expander.Label>
        <TextBlock FontWeight="Bold" FontSize="18" VerticalAlignment="Center">Custom formatter</TextBlock>
      </local:Expander.Label>
    </local:Expander>
    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Button Grid.Column="1" Width="100" Click="OKButtonClicked" HorizontalContentAlignment="Center">OK</Button>
      <Button Grid.Column="3" Width="100" Click="CancelButtonClicked" HorizontalContentAlignment="Center">Cancel</Button>
    </Grid>
  </Grid>
</Window>
