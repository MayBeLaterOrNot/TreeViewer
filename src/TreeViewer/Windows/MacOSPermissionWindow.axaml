<local:ChildWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewer;assembly=TreeViewer"
        mc:Ignorable="d" Width="800" Height="600"
        xmlns:mdc="clr-namespace:VectSharp.MarkdownCanvas;assembly=VectSharp.MarkdownCanvas"
        x:Class="TreeViewer.MacOSPermissionWindow"
        Title="Grant permissions" Background="White" WindowStartupLocation="CenterOwner">
  <local:ChildWindow.Content>
    <Grid Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="1*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <mdc:MarkdownCanvasControl Margin="0,0,0,10" Name="MarkdownCanvas" MaxRenderWidth="1000">

      </mdc:MarkdownCanvasControl>

      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Width="100" HorizontalContentAlignment="Center" Name="RestartButton" Classes="PlainButton" FontSize="13">Restart</Button>
        <Button Grid.Column="3" Width="100" HorizontalContentAlignment="Center" Name="IgnoreButton" Classes="PlainButton" FontSize="13">Ignore</Button>
      </Grid>
    </Grid>
  </local:ChildWindow.Content>
</local:ChildWindow>
