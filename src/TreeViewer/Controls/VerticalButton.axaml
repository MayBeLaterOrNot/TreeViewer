<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="8" d:DesignHeight="32"
             x:Class="TreeViewer.VerticalButton" Background="Transparent">
  <UserControl.Styles>
    <Style Selector="Canvas">
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="RenderTransform" Value="none" />
      <Setter Property="Transitions">
        <Transitions>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:.075" />
        </Transitions>
      </Setter>
    </Style>

    <Style Selector="Canvas#MainCanvas > Ellipse">
      <Setter Property="Fill" Value="#33000000" />
    </Style>

    <Style Selector="Canvas#MainCanvas:pointerover > Ellipse">
      <Setter Property="Fill" Value="#19000000" />
    </Style>

    <Style Selector="Canvas#MainCanvas.pressed > Ellipse">
      <Setter Property="Fill" Value="#66000000" />
    </Style>

    <Style Selector="Canvas#MainCanvas.pressed">
      <Setter Property="RenderTransform" Value="scale(0.9)" />
    </Style>
  </UserControl.Styles>
  <Viewbox>
    <Canvas Width="8" Height="32">
      <Canvas Width="8" Height="32" Name="MainCanvas">
        <Ellipse Width="8" Height="8"></Ellipse>
        <Ellipse Width="8" Height="8">
          <Ellipse.RenderTransform>
            <TranslateTransform Y="12"></TranslateTransform>
          </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Width="8" Height="8">
          <Ellipse.RenderTransform>
            <TranslateTransform Y="24"></TranslateTransform>
          </Ellipse.RenderTransform>
        </Ellipse>
      </Canvas>
    </Canvas>
  </Viewbox>
</UserControl>
